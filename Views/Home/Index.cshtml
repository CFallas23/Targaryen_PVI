@model Pedidos

@{
    ViewData["Title"] = "Ingresar Pedido";
}

<h2>Ingresar Pedido</h2>
@if(TempData["SuccessMessage"]!=null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<label id="mensajeResultado">
    @if (TempData["SuccessMessage"] != null)
    {
        <span class="text-success">@TempData["SuccessMessage"]</span>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <span class="text-danger">@TempData["ErrorMessage"]</span>
    }
</label>

<form asp-action="Ingresar" method="post">
    <div class="form-group">
        <label>Fecha</label>
        <input asp-for="Fecha" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Cliente</label>
        <input asp-for="Cliente" class="form-control" placeholder="Nombre del cliente" />
    </div>

    <div class="form-group">
        <label>Total</label>
        <input asp-for="Total" class="form-control" type="number" step="0.01" placeholder="Total del pedido" />
    </div>

    <div class="form-group">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control">
            <option value="Pendiente">Pendiente</option>
            <option value="En_proceso">En proceso</option>
            <option value="Completado">Completado</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Pedido</button>
</form>
